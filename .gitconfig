[user]
    name = Louis Lefevre
    email = llefevre@extron.com
    signingkey = AD03F2B2ABDC405FEF7D2476C8023AE956332ECF
[core]
    editor = vim
    autocrlf = true
[init]
    defaultBranch = master
[credential]
    helper = manager
[credential "https://github.com"]
    username = llefevre-extron
[gpg]
    program = C:/Program Files/Git/usr/bin/gpg.exe
[web]
    browser = chrome
[browser "chrome"]
    path = C:/Program Files/Google/Chrome/Application/chrome.exe
[git-p4]
    user = llefevre
    port = ssl:uk-dfd-perforce:5000
[branch]
    sort = -committerdate
[fetch]
    prune = true
    prunetags = true
[commit]
    gpgsign = true
    verbose = false
[push]
    autoSetupRemote = true
    followtags = true
[merge]
    conflictstyle = diff3
[rebase]
    autosquash = true
[tag]
    gpgsign = true
    sort = taggerdate
[log]
    date = iso
[color "status"]
    added = green bold
    changed = yellow bold
    untracked = red bold
[color "branch"]
    current = yellow bold
    local = green bold
    remote = cyan bold
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse
[alias]
    st = status
    cm = commit
    br = branch
    ad = add
    cl = clone
    pu = push
    pl = pull
    rmr = rm -r
    amend = commit --amend --no-edit
    configall = config --list --show-origin
    p4 = !python.exe 'C:\\Program Files\\Git\\mingw64\\libexec\\git-core\\git-p4'
    lsd = log --pretty=format:"%C(yellow)%h\\ \\|\\ %ad%C(reset)\\ \\-\\ %s%C(red)%d%C(reset)" --decorate --date=short
    count = ! git ls-files | grep -Ev '.jpg|.png|.jar|.md|.tex|.pdf|.gitignore|LICENSE|pom.xml' | xargs wc -l
    date = "!f() { \
                    old_date=$(git log -1 --format=%cd); \
                    new_date=$(date --date="$1+day+ago"); \
                    echo "Old Date:" ${old_date}; \
                    echo "New Date:" ${new_date}; \
                    GIT_COMMITTER_DATE="$"\""${new_date}$"\""" git commit --amend --no-edit --date "$"\""${new_date}$"\"""; \
        }; f"
